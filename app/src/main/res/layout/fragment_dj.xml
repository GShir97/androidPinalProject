<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".fragments.djFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/logoView3"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_gravity="left"
            android:src="@drawable/music_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/djSpinner"
            android:layout_width="342dp"
            android:layout_height="71dp"
            android:layout_margin="50dp"
            android:background="#30ffffff"
            android:gravity="bottom"
            android:padding="10dp"
            android:popupBackground="#E6A59A9A" />

        <Button
            android:id="@+id/showDjButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:gravity="center"
            android:text="show DJ"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/titlesLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/DJTitle"
                android:text="DJ:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Now playing:"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/ClubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Club:"
                    android:textColor="@color/white"
                    android:textSize="22dp" />



                <TextView
                    android:id="@+id/addressTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/DJView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/songView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/clubView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/addressView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>